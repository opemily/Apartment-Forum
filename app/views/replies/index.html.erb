<%= link_to 'Back to all Posts', topic_posts_path(@post.topic) %>

 <%= render(@post, title_link: false, list_post: false) %>

<% if current_user == @post.user %>

  <%= link_to('Edit Post', edit_post_path(@post)) %>
  <%= link_to('Delete Post', post_path(@post), method: :delete, data: {confirm: 'Are you sure you want to delete this post?'}) %>

<% end %>

<%= link_to('Reply to Post', new_post_reply_path(@post)) %>

<%= replies_tree_for(@replies) || '<p>There are no replies to this post yet.'.html_safe %>
